<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/display"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/uno"
            android:layout_row="0"
            android:layout_column="0"
            android:tag="1"
            android:onClick="concatenar"
            android:src="@mipmap/uno" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/dos"
            android:layout_row="0"
            android:layout_column="1"
            android:tag="2"
            android:onClick="concatenar"
            android:src="@mipmap/dos" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/tres"
            android:layout_row="0"
            android:layout_column="2"
            android:tag="3"
            android:onClick="concatenar"
            android:src="@mipmap/tres" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/pa"
            android:layout_row="0"
            android:layout_column="3"
            android:tag="("
            android:onClick="concatenar"
            android:src="@mipmap/pa" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/pc"
            android:layout_row="0"
            android:layout_column="4"
            android:tag=")"
            android:onClick="concatenar"
            android:src="@mipmap/pc" />

        <ImageButton

            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/cuatro"
            android:layout_row="1"
            android:layout_column="0"
            android:tag="4"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/cinco"
            android:layout_row="1"
            android:layout_column="1"
            android:tag="5"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/seis"
            android:layout_row="1"
            android:layout_column="2"
            android:tag="6"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/suma"
            android:layout_row="1"
            android:layout_column="3"
            android:tag="+"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/resta"
            android:layout_row="1"
            android:layout_column="4"
            android:tag="-"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/siete"
            android:layout_row="2"
            android:layout_column="0"
            android:tag="7"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/ocho"
            android:layout_row="2"
            android:layout_column="1"
            android:tag="8"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/nueve"
            android:layout_row="2"
            android:layout_column="2"
            android:tag="9"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/mult"
            android:layout_row="2"
            android:layout_column="3"
            android:tag="*"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/div"
            android:layout_row="2"
            android:layout_column="4"
            android:tag="/"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/cero"
            android:layout_row="3"
            android:layout_column="0"
            android:tag="0"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/punto"
            android:layout_row="3"
            android:layout_column="1"
            android:tag="."
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/igual"
            android:layout_row="3"
            android:layout_column="2"
            android:tag="="
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/inv"
            android:layout_row="3"
            android:layout_column="3"
            android:tag="inv"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/potencia"
            android:layout_row="3"
            android:layout_column="4"
            android:tag="^"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/sen"
            android:layout_row="4"
            android:layout_column="0"
            android:tag="sen("
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/tan"
            android:layout_row="4"
            android:layout_column="1"
            android:tag="tan("
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/cos"
            android:layout_row="4"
            android:layout_column="2"
            android:tag="cos("
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/borrar"
            android:layout_row="4"
            android:layout_column="3"
            android:tag="borrar"
            android:onClick="concatenar" />

        <ImageButton
            android:layout_width="67dp"
            android:layout_height="55dp"
            android:id="@+id/bTotal"
            android:layout_row="4"
            android:layout_column="4"
            android:tag="bt"
            android:onClick="concatenar" />
    </GridLayout>

</RelativeLayout>
